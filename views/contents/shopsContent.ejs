
<%- include("../ui/announcement", {textBold: "NOTE: ", text: "You can edit and delete shops by going into their details page"}) %>
<section class="d-flex flex-column  gap-1 pb-4 shopsContainer">
<h1 class="text-center text-black">Shops</h1>
<div class="d-flex justify-content-center flex-column align-items-center gap-2">


<%- include("../ui/addButton", {entity: "shops"}) %>
</div>

    <div class="d-flex flex-column flex-lg-row card-group gap-2 flex-wrap justify-content-center" style="transform: scale(.7);">
    <% shops.forEach(function(shop) { %>
    <%- include("../ui/numberCard", {header: shop.name, description: `Sales this shop ${shop?.isLucrative ? "is" : "is not"} lucrative.  
    has ${shop?.numberOfWorkers} workers. \n
    and is currently ${shop?.isOpen ? "open" : "closed"}`, linkTo: `/shops/${shop._id}` }) %>
    <% }) %>
    
    </div>

</section>